/**index.wxss**/
.container{
  padding-top: 0;
}
.logo-header{
  background-color: #444;
  width: 100%;
  height: 140px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 0px;
}
.content-cnode{
  width: 100%;
  box-sizing: border-box;
}
.contentTop{
  width: 100%;
  height:40px;
  box-sizing: border-box;
  border-bottom: 1px solid #ececec;
  padding-left: 10px;
  line-height: 40px;
}
.contentTop .view-img{
  width: 32px;
  height: 32px;
  margin-right: 10px;
  vertical-align: middle;
}
.contentTop text{
  font-size: 14px;
  color: #333333;
  vertical-align: middle;
}
.view-cell-arrow{
  width: 32px;
  height: 32px;
  float: right;
  position: relative;
  line-height: 20px;
}
.view-cell-arrow::after{
  position: absolute;
  content: '>';
  width: 16px;
  height: 16px;
  font-size: 16px;
  top: 50%;
  left: 50%;
  margin-top: -8px;
  margin-left: -8px;
}
.about{
  padding: 10px;
  box-sizing: border-box;
}
.about-item{
  padding-bottom: 15px;
  box-sizing: border-box;
}
.about-item .about-item-title{
  font-size: 14px;
  margin-bottom: 10px;
  color: #333333;
  display: block;
}
.about-item .about-item-content{
   font-size: 14px;
   color: #333333;
   display: block;
   box-sizing: border-box;
   padding-left: 20px;
}
.about-item .link{
  color: #8fbd20;
}