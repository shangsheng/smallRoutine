<template name="list">
 <scroll-view class='scroll-posts-list'  scroll-y="true" style="height:100%"  bindscrolltolower="lower" >
  <view class='main-div'>
    <view class='main-ul'>
    <block wx:for="{{postsList}}" wx:key="">
      <view class='main-li'>
        <navigator url='/pages/detail/detail?id={{item.id}}'>
        <view class="main-top clearfix" index="{{index}}">
          <view class='pull-left'>
            <view class='main-images'>
              <image src='{{item.author.avatar_url}}'></image>
             </view>
          </view>
          <view class='pull-right main-content'>
            <view class='main-name clearfix'>
              <text class='pull-left'>{{item.author.loginname}}</text>
              <text class='pull-right'>{{item.last_reply_at}}</text>
            </view>
            <view class='main-synopsis'>
              <text class='main-stick' wx:if="{{item.top === true}}">置顶</text>
              <text class='main-stick' wx:if="{{item.good === true}}">精华</text>
              <text>{{item.title}}</text>
            </view>
          </view>
        </view>
        <view class='main-bottom clearfix'>
          <view class='pull-left'>
            <view class='main-dope'>
              <image class="bar-info-item-icon" src="/images/icon/reply.png"></image>
              <view class='bar-info-item-nubmer'>{{item.reply_count}}</view>
            </view>
            <view class='main-dope'>
              <image class="bar-info-item-icon" src="/images/icon/visit.png"></image>
              <view class='bar-info-item-nubmer'>{{item.visit_count}}</view>
            </view>
          </view>
          <view class='pull-right'>
              <view class="bar-info-item2"  wx:if="{{item.tab === 'good'}}">
              <image class="bar-info-item-icon" src="/images/icon/type.png"></image>
              <view class="bar-info-item-number">精华</view>
            </view> 
            <view class="bar-info-item2" wx:if="{{item.tab === 'share'}}">
              <image class="bar-info-item-icon" src="/images/icon/type.png"></image>
              <view class="bar-info-item-number">分享</view>
            </view>
             <view class="bar-info-item2"  wx:if="{{item.tab === 'ask'}}">
              <image class="bar-info-item-icon" src="/images/icon/type.png"></image>
              <view class="bar-info-item-number">问答</view>
            </view> 
             <view class="bar-info-item2"  wx:if="{{item.tab === 'job'}}">
              <image class="bar-info-item-icon" src="/images/icon/type.png"></image>
              <view class="bar-info-item-number">招聘</view>
            </view> 
          </view>
        </view>
        </navigator>
      </view>
    </block>
    </view>
  </view>
 </scroll-view>
 <loading class="loading" hidden="{{hidden}}">
  <text class="loading-font">加载中...</text>
</loading>
</template>