/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 
.clearfix::after{
  content: "";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
}
/* 歌手简介 */
.tankuangjianjie{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  /* background-color: #000; */
}
.abstract{
  width: 100%;
  height: 100%;
  padding-top: 20px;
}
.abstract .abstract-img{
  width: 200px;
  height: 200px;
  margin: 0 auto;
}
.abstract .abstract-img image{
  width: 200px;
  height: 200px;
}
.abstractName{
  color:#fff;
  padding-left: 10px;
  padding-right: 10px;
  margin:10px auto;
  font-size:14px;
  line-height:1.8;
  text-indent: 2;
}
.abstractList{
  padding: 10px;
}
.abstractList .abstractLeft,.abstractList .abstractRight{
  margin-bottom: 10px;
  color:#fff;
  margin:10px auto;
  font-size:12px;
  line-height:1.8;
}
.tankuangjianjie .jianjieImg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: conter;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -webkit-filter: blur(100px);
    -ms-filter: blur(100px);
    filter: blur(100px); 
    z-index: -1;
}
/* 歌单简介 */
.abstractLabel{
  padding: 10px;
  font-size: 12px;
  color: #fff;
}
.abstractLabel text{
  padding: 0px 10px;
  border: 1px solid #fff;
  border-radius: 10px;
  font-size: 12px;
  color: #fff;
  margin: 0 5px;
}
/* 底部播放音乐 */
.songList{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.songList .music-div{
  height: 45px;
  padding: 5px;
}
.songList .music-div .music-left{
  display: inline-block;
}
.songList .music-div .music-left .music-img{
  width: 35px;
  height: 35px;
  vertical-align: middle;
  margin-right: 5px;
}
.songList .music-div .music-left  .music-span{
  display: inline-block;
  vertical-align: middle;
}
.songList .music-div .music-left  .music-span .music-name{
  display: block;
  font-size: 13px;
  color: #666;
}
.songList .music-div .music-left  .music-span .music-avator{
  font-size: 12px;
  color: #999;
}
.songList .music-div .music-right{
  float: right;
}
.songList .music-div .music-right image{
  width: 35px;
  height: 35px;
  margin-right: 5px;
}