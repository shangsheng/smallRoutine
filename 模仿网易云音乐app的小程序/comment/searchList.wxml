                            {{albumIndex<albumItem.artists.length-1?'/':''}}
                        </block>
                        -
                        <text>{{albumItem.publishTime}}</text>
                      </view>
                    </view>
                  </view>
                </view>
              </scroll-view>
              
            </view>
          </view>
        </swiper-item>
        <!-- 歌手 -->
        <swiper-item class="search-gs">
          <view class="search-artist">
              <view class="search-header-top">
                <text class="header-text">歌手</text>
              </view>
              <view class="search-artist-bottom">
                <scroll-view scroll-y style="height:{{serachHeight-40}}px;" bindscrolltolower="scrolltolower">
                  <view class="artist-ul">
                    <view class="artist-li" wx:for="{{searchArtists}}" wx:for-item="artistItem">
                      <view class="artist-img" data-id="{{artistItem.id}}" data-type="100" bindtap="serachHref">
                        <image src="{{artistItem.img1v1Url}}" class="artist-img-picUrl"></image>
                      </view>
                      <view class="artist-r" data-id="{{artistItem.id}}" data-type="100">
                        <view class="clearfix">
                          <view class="pull-left">
                            <view class="artist-anme">
                              <rich-text nodes="{{artistItem.name}}"></rich-text>
                              <text wx:for="{{artistItem.alias}}" wx:for-item="key" wx:for-index="aliasIndex">({{aliasIndex<artistItem.alias.length-1?key+'/':key}})</text>
                            </view>
                          </view>
