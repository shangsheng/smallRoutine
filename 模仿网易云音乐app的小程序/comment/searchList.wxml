                          </view>
                        </view>
                      </view>
                    </view>
                  </view>
                </scroll-view>
                
              </view>
            </view>
          </view>
        </swiper-item>
        <!-- 专辑 -->
        <swiper-item class="search-zj">
          <view class="search-header-top">
            <text class="header-text">专辑</text>
          </view>
          <view class="search-bottom">
            <view class="search-album-bottom">
              <scroll-view scroll-y style="height:{{serachHeight-40}}px;" bindscrolltolower="scrolltolower">
                <view class="album-ul">
                  <view class="album-li" wx:for="{{searchAlbum}}" wx:for-item="albumItem" data-id="{{albumItem.id}}" data-type="10" bindtap="serachHref">
                    <view class="album-img">
                      <image class="album-img-bgc" src="../../images/a6l.png"></image>
