                  <view class="songs-ul">
                    <view class="songs-li clearfix" wx:for="{{searchSongs}}" wx:for-item="songsItem" wx:for-index="keys">
                      <view class="pull-left" data-id="{{songsItem.id}}" data-type="1" bindtap="serachHref" data-index="{{keys}}">
