                    <view class="dj-l">
                      <image src="{{item.picUrl}}" class="dj-img-imgUrl"></image>
                     
                    </view>
                    <view class="dj-border">
                      <view class="dj-m">
                        <view class="dj-name">
                          <rich-text nodes="{{item.name}}"></rich-text>
                          
                        </view>
                        <view class="dj-title">{{item.dj.nickname}}</view>
                      </view>
                     
                    </view>
                  </view>
                </view>
               </scroll-view>
              </view>
            </view>
        </swiper-item>
