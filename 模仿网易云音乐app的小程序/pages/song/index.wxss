/* pages/song/index.wxss */
.songTop{
  height: 100px;
  width: 100%;
  padding:15px 10px;
  position: relative;
}
.songTop .song-list{
  width: 100%;
}
.songTop .songBgcImg{
  position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: conter;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -webkit-filter: blur(40px);
    -ms-filter: blur(40px);
    filter: blur(40px); 
    z-index: -1;

}
.songTop .song-list .songImg{
  width: 90px;
  height: 90px;
}
.songTop .song-list .song-right{
  display: inline-block;
  vertical-align: top;
  width: 60%;
  margin-left: 10px;
}
.songTop .song-list .song-right .songName{
  font-size: 14px;
  color: #fff;
}
.songTop .song-list .song-right .songName text{
  color: #9c9fa4;
}
.songTop .song-list .song-right  .songAbstract{
  margin-top: 5px;
}
.songTop .song-list .song-right  .songAbstract .songtitle{
  font-size: 12px;
  color: #fff;
}
.songTop .song-list .song-right  .songAbstract text{
  font-size: 10px;
  color: #9c9fa4;
  display: block;
  margin-top:5px; 
}
.songBottom{
  padding-top: 10px;
  width: 100%;
  background-color: #fff;
}
.songBottom .titles{
  font-size: 14px;
  font-weight: bold;
  text-align: left;
  padding-left: 10px;
}
.songBottom .songBoottom-item{
  padding: 5px;
}
.songBottom .songBoottom-item .index-list{
  float: left;
  width: 50%;
  padding-left: 1px;
  padding-right: 1px;
  box-sizing: border-box;
  position: relative;
  min-height: 200px;
}
.songBottom .songBoottom-item .index-list .list-item-img{
  width: 100%;
  height: 150px;
}
.songBottom .songBoottom-item .index-list .earCup{
  position: absolute;
  top: 0;
  right: 4px;
  width:100%;
  text-align:right;
  background-color:rgba(0,0,0,0.2);
  box-shadow: 0px 10px 5px rgba(0,0,0,0.2);
}
.songBottom .songBoottom-item .index-list .earCup image{
  width: 12px;
  height: 12px;
  vertical-align: middle;
}
.songBottom .songBoottom-item .index-list .genre-name{
  position: absolute;
  bottom: 60px;
  left: 0px;
  width: 100%;
  background-color:rgba(0,0,0,0.2);
  box-shadow: 0px 10px 5px rgba(0,0,0,0.2);
}
.songBottom .songBoottom-item .index-list .genre-name image{
   width: 12px;
  height: 12px;
  vertical-align: middle;
}
.songBottom .songBoottom-item .index-list .genre-name text{
  font-size: 13px;
  color: #fff;
  margin-left: 2px;
  margin-right: 5px;
}
.songBottom .songBoottom-item .index-list .earCup text{
  font-size: 12px;
  color: #ffffff;
  margin-left: 2px;
}
.songBottom .songBoottom-item .index-list .index-abstract{
  padding-top: 5px;
  font-size: 12px;
  color: #666;
  padding-left: 5px;
  font-weight: bold;
}
.songBottom .songBoottom-item .index-list .index-abstract .index-name{
  font-size: 12px;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}
.songBottom .songBoottom-item .index-list .index-abstract .index-artists{
  font-size: 11px;
  color: #999;
  font-weight: normal;
}
.songBottom .songBoottom-item .index-list .djpogram-index-title{
  position: absolute;
  top:-4px;
  left: 4px;
}
.songBottom .songBoottom-item .index-list .djpogram-index-title text{
  padding: 1px 2px;
  font-size: 11px;
  color: #ffffff;
  background-color: #BB2c08;
}
.songBottom .songBoottom-item .index-list .dj-item-title{
  position: absolute;
  bottom: 10px;
  left: 4px;
}
.songBottom .songBottom-genre {
  padding-top: 5px;
  padding-bottom: 5px;
  height: 40px;
  padding-left: 10px;
}
.songBottom .songBottom-genre .genre-left{
  float: left;
  color: #969897;
}
.songBottom .songBottom-genre .genre-left text{
  font-size: 13px;
  color: #2f3130;
  padding: 5px 10px;
  border-radius: 10px;
  border: 1px solid #d6d8d7;
}
.songBottom .songBottom-genre  .genre-right{
  float: right;
}
.songBottom .songBottom-genre  .genre-right text{
  color: #969897;
  font-size: 13px;
  margin-right: 5px;
  margin-left: 5px;
}